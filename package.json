{
  "name": "ts-pdf-viewer",
  "version": "0.0.1",
  "description": "PDF.js based PDF viewer with annotation support",
  "module": "dist/ts-pdf-viewer.esm.min.js",
  "types": "dist/ts-pdf-viewer.d.ts",
  "scripts": {
    "test": "karma start",
    "buildts": "tsc && copyfiles -f ./src/*.css ./tsc/src",
    "buildru": "rollup -c",
    "bundletypes": "dts-bundle-generator -o dist/ts-pdf-viewer.d.ts src/ts-pdf-viewer.ts",
    "copypdfjsworker": "copyfiles -f ./node_modules/pdfjs-dist/build/pdf.worker.min.js ./demo/assets/", 
    "copypdfjsviewerstyles": "copyfiles -f ./node_modules/pdfjs-dist/web/pdf_viewer.css ./demo/",
    "build": "npm run buildts && npm run buildru && npm run bundletypes && npm run copypdfjsworker",
    "start": "npm run build && lite-server -c ls-config.json",
    "mpublish": "npm version minor && npm publish",
    "ppublish": "npm version patch && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yermolim/ts-pdf-viewer.git"
  },
  "keywords": [
    "web",
    "typescript",
    "pdf",
    "pdf-viewer",
    "pdf-annotation",
    "pdfjs",
    "annotation"
  ],
  "author": "Volodymyr Yermolenko <yermolim@gmail.com> (https://github.com/yermolim)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yermolim/ts-pdf-viewer/issues"
  },
  "homepage": "https://github.com/yermolim/ts-pdf-viewer#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-multi-entry": "^4.0.0",
    "@rollup/plugin-node-resolve": "^11.0.1",
    "@rollup/plugin-replace": "^2.3.4",
    "@rollup/plugin-strip": "^2.0.0",
    "@rollup/plugin-typescript": "^8.1.0",
    "@types/jasmine": "^3.6.2",
    "@types/resize-observer-browser": "^0.1.4",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/eslint-plugin-tslint": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "copyfiles": "^2.4.1",
    "dts-bundle-generator": "^5.6.0",
    "eslint": "^7.17.0",
    "eslint-plugin-import": "^2.22.1",
    "jasmine-core": "^3.6.0",
    "jasmine-spec-reporter": "^6.0.0",
    "karma": "^5.2.3",
    "karma-chrome-launcher": "^3.1.0",
    "karma-cli": "^2.0.0",
    "karma-coverage-istanbul-reporter": "^3.0.3",
    "karma-jasmine": "^4.0.1",
    "karma-typescript": "^5.2.0",
    "lite-server": "^2.6.1",
    "puppeteer": "^5.5.0",
    "rollup": "^2.36.1",
    "rollup-plugin-css-porter": "^1.0.2",
    "rollup-plugin-node-externals": "^2.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "tslib": "^2.1.0",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "pdfjs-dist": "^2.6.347"
  }
}
